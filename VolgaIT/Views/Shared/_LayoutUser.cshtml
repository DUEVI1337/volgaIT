<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VolgaIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
<header>
    <div class="nav-header">
        <nav class="navigation">
            <div class="logo">
                <a href="/UserActions/UserProfile">@User.Identity.Name</a>
            </div>

            <div>
                <a href="/UserActions/MainPageUser" class="nav-item">Главная</a>
                <a href="/UserActions/ListApp" class="nav-item">Список приложений</a>
                <a href="/UserActions/AddUserApp" class="nav-item">Добавить приложение</a>
            </div>

            <div>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выход" class="nav-item" id="nav-item-exit-form"/>
                </form>
            </div>
        </nav>
    </div>
</header>

<main role="main" class="pb-3">
    @RenderBody()
    @RenderSection("Scripts", required: false)
</main>
</body>
</html>