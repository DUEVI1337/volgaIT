@model List<App>
@{
    Layout = "_LayoutUser";
    //ViewData["Title"] = "Мои приложения";
    ViewData["Title"] = "Мои приложения";
    int counter = 1;
}

<section class="list-app-container">
    <h1 class="display-1">Мои приложения</h1>
    <div class="table-app-container">
        <table>
            <tr class="table-row-app">
                <th>Номер</th>
                <th>Id</th>
                <th>Название</th>
                <th>Дата создания</th>
                <th></th>
            </tr>
        </table>	
        <div class="table-app-data">
            <table>
                @for (int i = 0; i < Model.Count(); i++)
                {
					
                    <tr class="table-row-app">
                        @{
                            counter = i+1;
                        }
                        <td>@counter</td>
                        <td>@Model[i].Id</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].DateCreate</td>
                        <td>
                            <a asp-action="StatisticsApp" asp-controller="AppsActions" asp-route-appId="@Model[i].Id">Статистика</a>
                            <a asp-action="Settings" asp-controller="AppsActions" asp-route-appId="@Model[i].Id">Настройки</a>
                        </td>
                    </tr>	
                }
            </table>
        </div>	
    </div>
</section>