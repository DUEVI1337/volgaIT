@using Microsoft.AspNetCore.Identity
@model IdentityUser
@{
    Layout = "_LayoutUser";
}

<section class="profile">
    <h1 class="display-1">Профиль</h1>
    <form method="post" asp-controller="UserActions">
        <div class="container-one-input">
            <input type="hidden" asp-for="Id"/>
            <div>
                <p class="lead">Почта: </p>
                <input type="text" placeholder="email" asp-for="@Model.Email" class="input-profile"/>
            </div>
            <div asp-validation-summary="@ValidationSummary.ModelOnly" class="valid-save-email"></div>
        </div>
        <div class="container-btn-profile">
            <input type="submit" value="Сохранить" asp-action="EditProfile" class="btn-save-profile"/>
            <p class="save-profile-result">@ViewBag.resultSaveProfile</p>
        </div>
    </form>    
</section>